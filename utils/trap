function EXIT_trap () {
	local ERR=$?
	if [ "$ERR" == 0 ]; then
		m "Succeeded $(realpath --relative-to="$ROOT" "$0")!" "$GREEN"
	else
		m "Failed $(realpath --relative-to="$ROOT" "$0")!" "$RED"
	fi
	exit "$ERR"
}

trap EXIT_trap EXIT

function INT_trap () {
	m "Aborted $(realpath --relative-to="$ROOT" "$0")!" "$RED"
	trap - EXIT
}

trap INT_trap INT
