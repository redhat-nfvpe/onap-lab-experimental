function EXIT_trap () {
	local ERR=$?
	if [ "$ERR" == 0 ]; then
		m "Congratulations! $(realpath --relative-to="$ROOT" "$0") succeeded!" "$GREEN"
	else
		m "Oh no! $(realpath --relative-to="$ROOT" "$0") failed!" "$RED"
	fi
	"$ROOT/fetch-results"
	exit "$ERR"
}

trap EXIT_trap EXIT

function INT_trap () {
	m "Aborted $(realpath --relative-to="$ROOT" "$0")!" "$RED"
	trap - EXIT
	exit 1
}

trap INT_trap INT
