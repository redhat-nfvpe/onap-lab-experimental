#!/bin/bash
set -e

if [ "$EUID" == 0 ]; then
	echo "Do not run this script as root"
	exit 1
fi

HERE=$(dirname "$(readlink -f "$0")")
ROOT=$HERE
. "$ROOT/configuration/environment"
. "$ROOT/utils/functions"

RESULTS="$WORKSPACE_ROOT/results"

echo "Fetching results to $(q "$RESULTS")"

if [ "$1" == '-c' ]; then
	rm --recursive --force "$RESULTS" 
fi

mkdir --parents "$RESULTS/configuration/tripleo/"
mkdir --parents "$RESULTS/configuration/controller/"
mkdir --parents "$RESULTS/logs/manager/"
mkdir --parents "$RESULTS/logs/tripleo/"
mkdir --parents "$RESULTS/logs/controller/"

set +e

function r () {
	"$ROOT/rsync" \
		--rsync-path="sudo rsync" \
		--recursive \
		--copy-links \
		--delete --delete-excluded --ignore-errors \
		--prune-empty-dirs \
		"$@" 2> /dev/null
}

r \
	--include=*/ \
	--include=*.sh \
	--include=*.conf \
	--include=*.ini \
	--include=*.yaml \
	--include=*.json \
	--exclude=* \
	tripleo:/home/stack/ \
	tripleo:/var/lib/config-data/puppet-generated/ \
	tripleo:/var/lib/mistral \
	tripleo:/usr/share/openstack-tripleo-heat-templates \
	"$RESULTS/configuration/tripleo/"

r \
	--include=*/ \
	--include=*.sh \
	--include=*.conf \
	--include=*.ini \
	--include=*.yaml \
	--include=*.json \
	--exclude=* \
	lab-controller-0:/var/lib/config-data/puppet-generated/ \
	"$RESULTS/configuration/controller/"

r \
	--include=*/ \
	--include=*.log \
	--exclude=* \
	manager:/home/manager/ \
	manager:/var/log/libvirt/qemu \
	manager:/var/log/virtualbmc \
	"$RESULTS/logs/manager/"

r \
	--include=*/ \
	--exclude=lab-config.tar.gz \
	--include=*.log \
	--include=*.tar.gz \
	--exclude=* \
	tripleo:/home/stack/ \
	tripleo:/var/log/containers/ \
	tripleo:/var/log/tripleo-container-image-prepare.log \
	tripleo:/var/lib/mistral \
	"$RESULTS/logs/tripleo/"

r \
	--include=*/ \
	--include=*.log \
	--exclude=* \
	lab-controller-0:/var/log/containers/ \
	"$RESULTS/logs/controller/"

find "$RESULTS/logs/tripleo/" -type f -name "*.tar.gz" |
while read F; do
	D=${F%.tar.gz}
	mkdir --parents "$D"
	tar xf "$F" -C "$D"
done
