Public network.

See: https://libvirt.org/formatnetwork.html
-->

<network>
  <name>public</name>
  <!-- bridge name length should be no longer than 11 -->
  <bridge name="public"/>
  <forward mode="nat" dev="$MANAGER_HYPERVISOR_CONTROL_PLANE_INTERFACE"/>
  <ip address="10.0.2.1" netmask="255.255.255.0"/>
</network>
