#!/bin/bash
set -e

if [ "$EUID" == 0 ]; then
	echo "Do not run this script as root"
	exit 1
fi

HERE=$(dirname "$(readlink -f "$0")")
ROOT=$(readlink -f "$HERE/..")
. "$ROOT/configuration/environment"
. "$ROOT/utils/functions"
. "$ROOT/utils/trap-with-fetch-results"

OVERCLOUD_HEAT_ENVIRONMENTS_YAML=$(cat "$ROOT/configuration/openstack/heat-environments.yaml" |
	HOME=/home/stack \
	ENVIRONMENTS=/home/stack/overcloud/deploy/templates/environments \
	envsubst)

OVERCLOUD_NETWORKS_YAML=$(cat "$ROOT/configuration/openstack/networks.yaml")

OVERCLOUD_NODES_YAML=$(cat "$ROOT/configuration/openstack/nodes.yaml")

OVERCLOUD_NODE_NETWORKING_J2_YAML=$(cat "$ROOT/configuration/openstack/node-networking.j2.yaml")

OVERCLOUD_NOVA_YAML=$(cat "$ROOT/configuration/openstack/nova.yaml")

OVERCLOUD_NEUTRON_YAML=$(cat "$ROOT/configuration/openstack/neutron.yaml")

OVERCLOUD_CEPH_YAML=$(cat "$ROOT/configuration/openstack/ceph.yaml")

"$ROOT/ssh" tripleo "$(cat <<- EOT

	set -e
	CYAN='\033[0;36m'
	RESET='\033[0m'
	function m () { echo -e "\$CYAN\$1\$RESET"; }

	. "\$HOME/stackrc"

	DEPLOY="\$HOME/overcloud/deploy"
	rm --recursive --force "\$DEPLOY/"
	mkdir --parents "\$DEPLOY/templates.j2/"

	m '[tripleo] Updating Heat environment selection'
	echo $(c "$OVERCLOUD_HEAT_ENVIRONMENTS_YAML") \
		> "\$DEPLOY/heat-environments.yaml"

	m '[tripleo] Updating networks configuration'
	echo $(c "$OVERCLOUD_NETWORKS_YAML") \
		> "\$DEPLOY/networks.yaml"

	m '[tripleo] Updating roles configuration'
	openstack \
	overcloud roles generate \
		-o "\$DEPLOY/roles.yaml" \
		Controller ComputeHCI \
		$(c "$TRIPLEO_VERBOSITY")

	m '[tripleo] Updating Heat Jinja2 template for networking'

	rsync --recursive \
		/usr/share/openstack-tripleo-heat-templates/* \
		"\$DEPLOY/templates.j2/"

	# Note: the default "environments/network-environment.yaml" imports configs (harcoded) from
	# "single-nic-vlan", so to avoid updating that file we will override "single-nic-vlan"
	echo $(c "$OVERCLOUD_NODE_NETWORKING_J2_YAML") \
		> "\$DEPLOY/templates.j2/network/config/single-nic-vlans/role.role.j2.yaml"

	m '[tripleo] Rendering Heat templates from Jinja2'

	"\$DEPLOY/templates.j2/tools/process-templates.py" \
		--safe \
		--base_path "\$DEPLOY/templates.j2/" \
		--output-dir "\$DEPLOY/templates/" \
		--network-data "\$DEPLOY/networks.yaml" \
		--roles-data "\$DEPLOY/roles.yaml"

	m '[tripleo] Updating Heat environment for nodes'
	echo $(c "$OVERCLOUD_NODES_YAML") \
		> "\$DEPLOY/templates/environments/nodes.yaml"

	m '[tripleo] Updating Heat environment for Nova'
	echo $(c "$OVERCLOUD_NOVA_YAML") \
		> "\$DEPLOY/templates/environments/nova.yaml"

	m '[tripleo] Updating Heat environment for Neutron'
	echo $(c "$OVERCLOUD_NEUTRON_YAML") \
		> "\$DEPLOY/templates/environments/neutron.yaml"

	m '[tripleo] Updating Heat environment for Ceph'
	echo $(c "$OVERCLOUD_CEPH_YAML") \
		> "\$DEPLOY/templates/environments/ceph.yaml"

	m '[tripleo] Updating Heat environment for container images'

	# Note: This file is often created as "containers-prepare-parameter.yaml" in the documentation
	mkdir --parents "\$DEPLOY/templates/environments/"
	openstack \
	tripleo container image prepare default \
  		--output-env-file "\$DEPLOY/templates/environments/container-images.default.yaml" \
		$(c "$TRIPLEO_VERBOSITY")

	# BUG: using "--local-push-destination" for the above will result in a failure to pull the
	# images during "overcloud deploy". See possibly:
	# https://bugzilla.redhat.com/show_bug.cgi?id=1704838
	# https://bugzilla.redhat.com/show_bug.cgi?id=1696393

	# Annoyingly, the TripleO default locks some container images at specific versions while leaving
	# others at latest upstream versions, so we will make sure to manually lock those, too
	python2 <<- _EOT
		import yaml

		with open("\$DEPLOY/templates/environments/container-images.default.yaml") as f:
		  y = yaml.load(f)

		s = y["parameter_defaults"]["ContainerImagePrepare"][0]["set"]
		s["tag"] = $(q "$TRIPLEO_CONTAINER_IMAGE_TAG")
		s["ceph_tag"] = $(q "$CEPH_CONTAINER_IMAGE_TAG")

		with open("\$DEPLOY/templates/environments/container-images.yaml", "w") as f:
		  yaml.dump(y, f, default_flow_style=False)
	_EOT

	m '[tripleo] Deploying OpenStack'
	# The stack name will be used as a prefix for server names and for the "rc" file (e.g. "labrc")
	openstack \
	overcloud deploy \
		--stack $(c "$OVERCLOUD_HEAT_STACK") \
		--templates "\$DEPLOY/templates/" \
		--networks-file "\$DEPLOY/networks.yaml" \
		--roles-file "\$DEPLOY/roles.yaml" \
		--answers-file "\$DEPLOY/heat-environments.yaml" \
		$(c "$TRIPLEO_VERBOSITY")

	#openstack stack resource list overcloud
	#openstack stack resource show overcloud ControllerServiceChain

EOT
)"
