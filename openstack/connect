#!/bin/bash
set -e

HERE=$(dirname "$(readlink -f "$0")")
ROOT=$(readlink -f "$HERE/..")
. "$ROOT/configuration/environment"
. "$ROOT/utils/functions"
. "$ROOT/utils/trap"

"$HERE/infrastructure/connect"

"$ROOT/rsync" \
	tripleo:/home/stack/labrc \
	"$WORKSPACE_ROOT/${OVERCLOUD_HEAT_STACK}rc"

"$ROOT/rsync" \
	"$WORKSPACE_ROOT/${OVERCLOUD_HEAT_STACK}rc" \
	"manager:/home/manager/${OVERCLOUD_HEAT_STACK}rc"

CONTROLLER_IP_ADDRESS=$("$ROOT/manager/get-ipv4-address" openstack-controller eth1)

if [ -z "$CONTROLLER_IP_ADDRESS" ]; then
	m '[manager] Controller does not have an IP address on hypervisor control plane' "$RED"
	exit 1
fi

"$ROOT/ssh" manager-root "$(cat <<- EOT

	set -e
	CYAN='\033[0;36m'
	RESET='\033[0m'
	function m () { echo -e "\$CYAN\$1\$RESET"; }

	m '[manager] Enabling IP route to External network'

	# TODO make permanent
	ip route del 10.0.0.0/24 || true
	ip route add 10.0.0.0/24 via $(c "$CONTROLLER_IP_ADDRESS") || true

EOT
)"

. "$WORKSPACE_ROOT/${OVERCLOUD_HEAT_STACK}rc"

# TODO extract IP and password

echo "$OS_AUTH_URL"

m "[manager] Enabling dashboard port $OPENSTACK_LOCAL_DASHBOARD_PORT forwarded via ssh \"openstack-dashboard\""

"$ROOT/utils/ensure-ssh-config-forward" openstack-dashboard "$MANAGER_IP_ADDRESS" manager manager@manager "$OPENSTACK_LOCAL_DASHBOARD_PORT" 10.0.0.70:80
