#!/bin/bash
set -e

if [ "$EUID" == 0 ]; then
	echo "Do not run this script as root"
	exit 1
fi

PROJECT_NAME=$1

HERE=$(dirname "$(readlink -f "$0")")
ROOT=$(readlink -f "$HERE/..")

"$ROOT/hypervisor/ssh" undercloud ". /home/stack/overcloudrc && OS_PROJECT_NAME=\"$PROJECT_NAME\" openstack $(printf ' %q' "${@:2}")"
